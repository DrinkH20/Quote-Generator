WindowManage:
    MyLayout:
    SettingWindow:
    CleanType:


<MyLayout>
    name: "main"

    BoxLayout:
        orientation: 'vertical'
        size: self.size
        pos: self.pos

        # DYNAMIC HEADER FOR MAIN SCREEN
        BoxLayout:
            size_hint_y: None
            height: 28
            padding: [4, 2]
            canvas.before:
                Color:
                    rgba: root.title_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: root.title_text
                color: 1, 1, 1, 1
                font_size: 14
                bold: True

        # REST OF YOUR UI GOES HERE
        BoxLayout:
            orientation: 'horizontal'
            TextInput:
                id: first_name_input
                hint_text: "First Name"
                font_size: 14
            TextInput:
                id: last_name_input
                hint_text: "Last Name"
                font_size: 14
            Button:
                text: 'Settings'
                on_press: app.root.current = "settings"

        BoxLayout:
            orientation: 'horizontal'
            padding: 0
            spacing: 0
            TextInput:
                id: sqft_input
                hint_text: "Enter Sqft"
                font_size: 14
            TextInput:
                id: beds_input
                hint_text: "Enter Beds"
                font_size: 14
            TextInput:
                id: baths_input
                hint_text: "Enter Baths"
                font_size: 14

            Spinner:
                id: type_input
                text: 'OneTime'
                on_press: app.root.current = "cleantype"


        BoxLayout:
            orientation: 'vertical'
            padding: 0
            spacing: 0
            Button:
                id: button_1
                text: 'Manually Generate'
                font_size: 14
                on_press:
                    root.change_button_color("1")
                    root.callback2(button_1)

            Button:
                id: button_2
                text: 'Get From Email'
                font_size: 14
                on_press:
                    root.change_button_color("2")
                    root.callback1(button_2)

<SettingWindow>
    name: "settings"

    canvas.before:
        Color:
            rgba: root.bg_color
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            TextInput:
                id: screen_input
                hint_text: "Enter Screen In Use"
                font_size: 14
            TextInput:
                id: username_input
                hint_text: "User"
                font_size: 14
            Button:
                text: 'Update'
                font_size: 14
                on_press: root.update(self)

        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Back'
                font_size: 14
                on_press: app.root.current = "main"

            Button:
                text: 'Price PDX'
                font_size: 14
                on_press: root.update_price_pdx(self)

            Button:
                text: 'Price DFW'
                font_size: 14
                on_press: root.update_price_dfw(self)




<CleanType>
    name: "cleantype"
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            padding: 0
            spacing: 0
            size: root.width, root.height
            Button:
                id: button_2
                text: 'Move'
                font_size: 14
                on_press: app.change_screen_and_update("main", "Move")

            Button:
                id: button_2
                text: 'OneTime'
                font_size: 14
                on_press: app.change_screen_and_update("main", "OneTime")

            Button:
                id: button_2
                text: 'Weekly'
                font_size: 14
                on_press: app.change_screen_and_update("main", "Weekly")

        BoxLayout:
            orientation: 'vertical'
            padding: 0
            spacing: 0
            size: root.width, root.height
            Button:
                id: button_2
                text: 'Biweekly'
                font_size: 14
                on_press: app.change_screen_and_update("main", "Biweekly")

            Button:
                id: button_2
                text: 'Monthly'
                font_size: 14
                on_press: app.change_screen_and_update("main", "Monthly")

            Button:
                id: button_2
                text: 'Far'
                font_size: 14
                on_press: app.change_screen_and_update("main", "Far")
